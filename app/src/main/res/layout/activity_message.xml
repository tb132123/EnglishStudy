<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="app.leiyu.com.english.messageActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/toolbar" />

        <Button
            android:text="translate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button18"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="?android:attr/colorBackground"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:drawableTop="@mipmap/translate"/>

        <Button
            android:text="friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button17"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="?android:attr/colorBackground"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:drawableTop="@mipmap/friend"/>

        <Button
            android:text="setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button16"
            android:textSize="18sp"
            android:textColor="@android:color/holo_blue_dark"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="?android:attr/colorBackground"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:drawableTop="@mipmap/setting"
            />

        <Button
            android:text="updata_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button14"
            android:textSize="24sp"
            android:textColor="@android:color/background_dark"
            android:background="?android:attr/colorBackground"
            android:layout_above="@+id/button18"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="135dp"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="changepassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button13"
            android:textSize="20sp"
            android:textColor="@android:color/background_dark"
            style="@style/Widget.AppCompat.Button"
            android:background="?android:attr/colorBackground"
            android:layout_above="@+id/button14"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="82dp"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
