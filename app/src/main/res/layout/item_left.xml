<!--?xml version="1.0" encoding="utf-8"?-->
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/touxiang"
            android:id="@+id/iv_left_image"

            android:layout_marginStart="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="TextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_left_image"
            android:layout_toEndOf="@+id/iv_left_image"
            android:id="@+id/tv_left_text"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black" />

    </RelativeLayout>
